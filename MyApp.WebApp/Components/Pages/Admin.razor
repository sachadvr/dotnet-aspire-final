    private void ShowAddCategoryModal()
    {
        editingCategory = null;
        newCategory = new Category();
        showCategoryModal = true;
        StateHasChanged();
    }

    private void EditCategory(Category category)
    {
        editingCategory = category;
        newCategory = new Category
        {
            Id = category.Id,
            Name = category.Name,
            Description = category.Description
        };
        showCategoryModal = true;
        StateHasChanged();
    }

    private void CloseCategoryModal()
    {
        showCategoryModal = false;
        editingCategory = null;
        newCategory = new Category();
        StateHasChanged();
    }

    private async Task SaveCategory()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(newCategory.Name))
            {
                message = "Le nom de la catégorie est obligatoire";
                isError = true;
                StateHasChanged();
                return;
            }

            if (editingCategory?.Id > 0)
            {
                await adminClient.UpdateCategoryAsync(editingCategory.Id, newCategory);
                message = "Catégorie modifiée avec succès!";
            }
            else
            {
                await adminClient.CreateCategoryAsync(newCategory);
                message = "Catégorie créée avec succès!";
            }
            isError = false;
            CloseCategoryModal();
            // Recharger les catégories pour le dropdown des produits aussi
            categories = await categoryClient.GetCategoriesAsync();
            await LoadData();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            message = $"Erreur: {ex.Message}";
            isError = true;
            StateHasChanged();
        }
    }

    private async Task DeleteCategory(int id)
    {
        try
        {
            var success = await adminClient.DeleteCategoryAsync(id);
            if (success)
            {
                message = "Catégorie supprimée avec succès!";
                isError = false;
                // Recharger les catégories pour le dropdown des produits aussi
                categories = await categoryClient.GetCategoriesAsync();
                await LoadData();
            }
            else
            {
                message = "Erreur lors de la suppression de la catégorie";
                isError = true;
            }
            StateHasChanged();
        }
        catch (Exception ex)
        {
            message = $"Erreur: {ex.Message}";
            isError = true;
            StateHasChanged();
        }
    }
