@page "/products"
@using MyApp.WebApp.Clients
@using MyApp.Persistence
@using Microsoft.AspNetCore.Components
@inject IProductClient productClient
@inject IOrderClient orderClient
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Produits</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Produits</h1>
    <div class="d-flex gap-2">
        <AuthorizeView Roles="admin">
            <Authorized>
                <a href="/admin" class="btn btn-primary rounded-30">
                    <span class="bi bi-gear"></span> Gérer les produits
                </a>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView>
            <Authorized>
                @if (cartItems.Count > 0)
                {
                    <button class="btn btn-success" @onclick="ShowCart">
                        Panier (@cartItems.Sum(c => c.Value.Quantity)) - @GetCartTotal().ToString("C")
                    </button>
                }
            </Authorized>
        </AuthorizeView>
    </div>
</div>

@if (products != null && products.Count > 0)
{
    <div class="mb-3">
        <div class="input-group">
            <span class="input-group-text">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                </svg>
            </span>
            <input type="text" class="form-control" placeholder="Rechercher un produit (nom, description)..."
                   @bind="searchQuery" @bind:event="oninput" />
            @if (!string.IsNullOrEmpty(searchQuery))
            {
                <button class="btn btn-outline-secondary" type="button" @onclick="ClearSearch">
                    <span class="bi bi-x"></span>
                </button>
            }
        </div>
        @if (!string.IsNullOrEmpty(searchQuery))
        {
            <small class="text-muted">@GetFilteredProductsCount() produit(s) trouvé(s)</small>
        }
    </div>
}

@if (products == null)
{
    <p>Chargement...</p>
}
else if (products.Count == 0)
{
    <div class="alert alert-info">
        <h5>Aucun produit disponible pour le moment.</h5>
        <AuthorizeView Roles="admin">
            <Authorized>
                <p>Vous pouvez ajouter des produits depuis la page <a href="/admin" class="alert-link">Administration</a>.</p>
            </Authorized>
            <NotAuthorized>
                <p>Connectez-vous en tant qu'administrateur pour ajouter des produits.</p>
            </NotAuthorized>
        </AuthorizeView>
    </div>
}
else if (filteredProducts.Count == 0)
{
    <div class="alert alert-info">
        @if (string.IsNullOrEmpty(searchQuery))
        {
            <h5>Aucun produit disponible pour le moment.</h5>
        }
        else
        {
            <p class="mb-0">Aucun produit ne correspond à votre recherche "<strong>@searchQuery</strong>".</p>
        }
    </div>
}
else
{
    <div class="products-container">
        @foreach (var product in filteredProducts)
        {
            <div class="product-card">
                <div class="product-media">
                    <div class="product-main-img">
                        <span class="top-right">@product.Price.ToString("F2") <span>€</span></span>

                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" alt="@product.Name" onerror="this.style.display='none'">
                        }
                        else
                        {
                            <div class="no-image">Pas d'image</div>
                        }
                    </div>
                </div>

                <div class="product-content">
                    <h1 class="product-title">@product.Name</h1>

                    @if (product.Category != null)
                    {
                        <div class="product-category mb-2">
                            <span class="badge bg-info">@product.Category.Name</span>
                        </div>
                    }

                    <p class="product-description">@product.Description</p>

                    <p class="product-stock @(product.Stock > 0 ? "in-stock" : "out-of-stock")">
                        @if (product.Stock > 0)
                        {
                            <text>En stock: @product.Stock unités</text>
                        }
                        else
                        {
                            <text>Rupture de stock</text>
                        }
                    </p>

                    <AuthorizeView>
                        <Authorized>
                            @if (product.Stock > 0)
                            {
                                <div class="product-quantity-group">
                                    <input type="number"
                                           class="product-quantity-input"
                                           min="1"
                                           max="@product.Stock"
                                           @bind="quantities[product.Id]"
                                           @bind:event="onchange" />
                                    <button class="btn-add" @onclick="() => AddToCart(product)">
                                        Ajouter au panier
                                    </button>
                                </div>
                            }
                            else
                            {
                                <button class="btn-add" disabled>Rupture de stock</button>
                            }
                        </Authorized>
                        <NotAuthorized>
                            <a href="/login" class="btn-login">
                                Connectez-vous pour commander
                            </a>
                        </NotAuthorized>
                    </AuthorizeView>
                </div>
            </div>
        }
    </div>
}

@if (showCart)
{
    <div class="modal fade show" style="display: block;" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Panier</h5>
                    <button type="button" class="btn-close" @onclick="CloseCart"></button>
                </div>
                <div class="modal-body">
                    @if (cartItems.Count == 0)
                    {
                        <p>Votre panier est vide.</p>
                    }
                    else
                    {
                        <ul class="list-group mb-3">
                            @foreach (var item in cartItems.Values)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center gap-2">
                                        @if (!string.IsNullOrEmpty(item.Product.ImageUrl))
                                        {
                                            <img src="@item.Product.ImageUrl" alt="@item.Product.Name" style="width: 50px; height: 50px; object-fit: cover; border-radius: 4px;" onerror="this.style.display='none'">
                                        }
                                        <div>
                                            <strong>@item.Product.Name</strong><br/>
                                            <small>@item.Product.Price.ToString("C") x @item.Quantity</small>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center gap-2">
                                        <span>@((item.Quantity * item.Product.Price).ToString("C"))</span>
                                        <button class="btn btn-sm btn-danger rounded-30" @onclick="() => RemoveFromCart(item.Product.Id)">
                                            ×
                                        </button>
                                    </div>
                                </li>
                            }
                        </ul>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total:</strong>
                            <strong>@GetCartTotal().ToString("C")</strong>
                        </div>
                        <div class="mb-3">
                            <label class="form-label"><strong>Adresse de livraison *</strong></label>
                            <textarea class="form-control @(cartErrorMessage != null && cartErrorMessage.Contains("adresse") ? "is-invalid" : "")" rows="3" @bind="deliveryAddress" placeholder="Entrez votre adresse complète de livraison"></textarea>
                            @if (cartErrorMessage != null && cartErrorMessage.Contains("adresse"))
                            {
                                <div class="invalid-feedback d-block">
                                    @cartErrorMessage
                                </div>
                            }
                        </div>
                        @if (!string.IsNullOrEmpty(cartErrorMessage) && !cartErrorMessage.Contains("adresse"))
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @cartErrorMessage
                                <button type="button" class="btn-close" @onclick="() => cartErrorMessage = string.Empty"></button>
                            </div>
                        }
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseCart">Fermer</button>
                    @if (cartItems.Count > 0)
                    {
                        <button type="button" class="btn btn-primary rounded-30" @onclick="CreateOrder" disabled="@isCreatingOrder">
                            @if (isCreatingOrder)
                            {
                                <span>Création...</span>
                            }
                            else
                            {
                                <span>Passer la commande</span>
                            }
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@if (showAddToCartModal)
{
    <div class="modal fade show add-to-cart-modal" style="display: block;" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content add-to-cart-modal-content">
                <div class="modal-body text-center p-4">
                    <div class="success-icon mb-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-check-circle-fill text-success" viewBox="0 0 16 16">
                            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.061L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                        </svg>
                    </div>
                    <h5 class="mb-2">Produit ajouté au panier !</h5>
                    @if (lastAddedProduct != null)
                    {
                        <p class="text-muted mb-0">@lastAddedProduct.Name</p>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    private List<Product>? products = null;
    private Dictionary<int, CartItem> cartItems = new();
    private Dictionary<int, int> quantities = new();
    private bool showCart = false;
    private bool isCreatingOrder = false;
    private bool isError = false;
    private string deliveryAddress = string.Empty;
    private string? cartErrorMessage = null;
    private string searchQuery = string.Empty;
    private bool showAddToCartModal = false;
    private Product? lastAddedProduct = null;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadProducts();
            StateHasChanged();
        }
    }

    private async Task LoadProducts()
    {
        try
        {
            products = await productClient.GetProductsAsync();
            foreach (var product in products)
            {
                quantities[product.Id] = 1;
            }
        }
        catch (Exception ex)
        {
            isError = true;
            products = new List<Product>();
        }
    }

    private async Task AddToCart(Product product)
    {
        var quantity = quantities.GetValueOrDefault(product.Id, 1);
        if (quantity <= 0 || quantity > product.Stock)
        {
            isError = true;
            StateHasChanged();
            return;
        }

        if (cartItems.ContainsKey(product.Id))
        {
            cartItems[product.Id].Quantity += quantity;
        }
        else
        {
            cartItems[product.Id] = new CartItem { Product = product, Quantity = quantity };
        }

        // Afficher la modal d'animation
        lastAddedProduct = product;
        showAddToCartModal = true;
        isError = false;
        StateHasChanged();

        // Fermer automatiquement la modal après 1.5 secondes
        await Task.Delay(1500);
        showAddToCartModal = false;
        lastAddedProduct = null;
        StateHasChanged();
    }

    private void RemoveFromCart(int productId)
    {
        cartItems.Remove(productId);
        StateHasChanged();
    }

    private void ShowCart()
    {
        showCart = true;
        cartErrorMessage = null;
        StateHasChanged();
    }

    private void CloseCart()
    {
        showCart = false;
        deliveryAddress = string.Empty;
        cartErrorMessage = null;
        StateHasChanged();
    }

    private decimal GetCartTotal()
    {
        return cartItems.Values.Sum(item => item.Product.Price * item.Quantity);
    }

    private async Task CreateOrder()
    {
        cartErrorMessage = null;

        if (cartItems.Count == 0)
        {
            cartErrorMessage = "Votre panier est vide.";
            StateHasChanged();
            return;
        }

        if (string.IsNullOrWhiteSpace(deliveryAddress))
        {
            cartErrorMessage = "Veuillez entrer une adresse de livraison.";
            StateHasChanged();
            return;
        }

        isCreatingOrder = true;
        cartErrorMessage = null;
        StateHasChanged();

        try
        {
            var request = new CreateOrderRequest(
                cartItems.Values.Select(item =>
                    new CreateOrderItemRequest(item.Product.Id, item.Quantity)
                ).ToList(),
                deliveryAddress.Trim()
            );

            var order = await orderClient.CreateOrderAsync(request);
            cartItems.Clear();
            deliveryAddress = string.Empty;
            cartErrorMessage = null;
            showCart = false;
            await LoadProducts(); // Recharger pour mettre à jour les stocks

            // Rediriger vers la page de remerciement
            Navigation.NavigateTo($"/thank-you?orderId={order.Id}");
        }
        catch (Exception ex)
        {
            cartErrorMessage = $"Erreur lors de la création de la commande: {ex.Message}";
        }
        finally
        {
            isCreatingOrder = false;
            StateHasChanged();
        }
    }

    private List<Product> filteredProducts
    {
        get
        {
            if (products == null) return new List<Product>();

            if (string.IsNullOrWhiteSpace(searchQuery))
            {
                return products;
            }

            var query = searchQuery.ToLowerInvariant();
            return products.Where(p =>
                p.Name.ToLowerInvariant().Contains(query) ||
                (!string.IsNullOrEmpty(p.Description) && p.Description.ToLowerInvariant().Contains(query)) ||
                (p.Category != null && !string.IsNullOrEmpty(p.Category.Name) && p.Category.Name.ToLowerInvariant().Contains(query))
            ).ToList();
        }
    }

    private int GetFilteredProductsCount()
    {
        return filteredProducts.Count;
    }

    private void ClearSearch()
    {
        searchQuery = string.Empty;
        StateHasChanged();
    }

    private class CartItem
    {
        public Product Product { get; set; } = null!;
        public int Quantity { get; set; }
    }
}
